<div class="mt-4">
  <h3>Cap nhat khoa hoc</h3>
  <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class="mb-3">
      <label for="name">Ten khoa hoc</label>
      <input type="text" name="name" value="{{course.name}}" id="name" />
    </div>

    <div class="mb-3">
      <label for="description">Mo ta</label>
      <textarea  name="description" id="description" >{{course.description}}</textarea>
    </div>

    <div class="mb-3">
      <label for="videoId">VideoId</label>
      <input type="text" name="videoId" value="{{course.videoId}}" id="videoId" />
    </div>

    <div class="mb-3">
      <label for="level">Trinh do</label>
      <input type="text" name="level" value="{{course.level}}" id="level" />
    </div>
    <button type="submit" class="btn btn-primary">Luu lai khoa hoc</button>
  </form>
</div>